<%- include("partials/header.ejs") %>


<h1>Edit Post</h1>


<form action="/edit/<%= post.id %>" method="POST">
  <input
    type="text"
    name="title"
    value="<%= post.title %>"
    required
  />

  <textarea name="content" required>
<%= post.content %>
  </textarea>

  <button type="submit">Update</button>
</form>

<a href="/">Cancel</a>

